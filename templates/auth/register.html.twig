{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    <div class="container d-flex justify-content-center align-items-center" style="height: 100vh;">
        <div class="card shadow-lg p-4" style="width: 100%; max-width: 400px;">
            <h2 class="text-center mb-4">Create Account</h2>

            {{ form_start(registrationForm) }}
                <div class="mb-3">
                    {{ form_row(registrationForm.email, { 'attr': {'class': 'form-control', 'placeholder': 'Email'} }) }}
                </div>
                <div class="mb-3">
                    {{ form_row(registrationForm.firstname, { 'attr': {'class': 'form-control', 'placeholder': 'First Name'} }) }}
                </div>
                <div class="mb-3">
                    {{ form_row(registrationForm.lastname, { 'attr': {'class': 'form-control', 'placeholder': 'Last Name'} }) }}
                </div>
                <div class="mb-3">
                    {{ form_row(registrationForm.password, { 'attr': {'class': 'form-control', 'placeholder': 'Password'} }) }}
                </div>
                
                <div class="d-grid">
                    <button type="submit" class="btn btn-primary btn-lg">Register</button>
                </div>
            {{ form_end(registrationForm) }}
            
            <div class="text-center mt-3">
                <p>Already have an account? <a href="/login">Login</a></p>
            </div>
        </div>
    </div>
{% endblock %}
{% extends 'base.html.twig' %}

{% block title %}Modifier l'utilisateur{% endblock %}

{% block body %}
    <div class="container mt-5">
        <div class="card shadow-lg p-4 rounded">
            <h1 class="text-center text-warning">Modifier l'utilisateur</h1>

            <div class="mt-4">
                {{ form_start(form) }}
                    
                    <div class="mb-3">
                        {{ form_label(form.firstname, 'Prénom', {'label_attr': {'class': 'form-label'}}) }}
                        {{ form_widget(form.firstname, {'attr': {'class': 'form-control'}}) }}
                        {{ form_errors(form.firstname, {'attr': {'class': 'invalid-feedback'}}) }}  
                    </div>

                    <div class="mb-3">
                        {{ form_label(form.lastname, 'Nom', {'label_attr': {'class': 'form-label'}}) }}
                        {{ form_widget(form.lastname, {'attr': {'class': 'form-control'}}) }}
                        {{ form_errors(form.lastname, {'attr': {'class': 'invalid-feedback'}}) }}  
                    </div>

                    <div class="mb-3">
                        {{ form_label(form.email, 'Email', {'label_attr': {'class': 'form-label'}}) }}
                        {{ form_widget(form.email, {'attr': {'class': 'form-control'}}) }}
                        {{ form_errors(form.email, {'attr': {'class': 'invalid-feedback'}}) }}  
                    </div>

                    <div class="mb-3">
                        {{ form_label(form.roles, 'Rôles', {'label_attr': {'class': 'form-label'}}) }}
                        {{ form_widget(form.roles, {'attr': {'class': 'form-control'}}) }}
                        {{ form_errors(form.roles, {'attr': {'class': 'invalid-feedback'}}) }}  
                    </div>

                    <button type="submit" class="btn btn-warning w-100">✏️ Modifier</button>
                {{ form_end(form) }}

                <div class="text-center mt-3">
                    <a href="{{ path('app_user') }}" class="btn btn-outline-secondary">↩ Retour à la liste</a>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

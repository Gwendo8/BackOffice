            <div class="mt-4">
                {{ form_start(form, {'attr': {'class': 'needs-validation', 'novalidate': 'novalidate'}}) }}
                    
                    <div class="mb-3">
                        {{ form_label(form.firstname, 'Pr√©nom', {'label_attr': {'class': 'form-label'}}) }}
